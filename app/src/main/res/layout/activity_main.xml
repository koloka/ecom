<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sigin_bg">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarhome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:title="Sambath">

    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blog_signin"
                    android:textSize="70dp"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="50dp"
                    android:text="@string/blog_welcome">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="50dp"
                    android:text="Log In to go to next activity">
                </TextView>

            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <Button
                    android:id="@+id/loginbtn"
                    android:onClick="seeTestLayout"
                    android:layout_centerInParent="true"
                    android:layout_above="@id/signupbtn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/radius_btn"
                    android:paddingHorizontal="60dp"
                    android:paddingVertical="10dp"
                    android:text="Log In"
                    android:textSize="20dp" />
                <Button
                    android:id="@+id/signupbtn"
                    android:layout_width="200dp"
                    android:layout_marginBottom="50dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_btn"
                    android:paddingHorizontal="60dp"
                    android:paddingVertical="10dp"
                    android:text="Sign Up"
                    android:textSize="20dp" />

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>